{
    "name": "brainbits/phpstan-rules",
    "description": "PHPStan extension with opinionated strict rules for better code in tests.",
    "keywords": [
        "phpstan",
        "phpstan-rules",
        "tests"
    ],
    "type": "phpstan-extension",
    "license": "MIT",
    "homepage": "https://github.com/brainbits/phpstan-rules",
    "authors": [
        {
            "name": "Stephan Wentz",
            "email": "swentz@brainbits.net"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.3",
        "nette/utils": "^4.0",
        "nikic/php-parser": "^4.3|^5.0",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "brainbits/phpcs-standard": "^7.0",
        "php-coveralls/php-coveralls": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11.0"
    },
    "scripts": {
        "check-all": [
            "phpcs",
            "@phpstan",
            "phpunit"
        ],
        "phpstan": "phpstan analyse --ansi"
    },
    "autoload": {
        "psr-4": {
            "BrainbitsPhpStan\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    },
    "support": {
        "issues": "https://github.com/brainbits/phpstan-rules/issues",
        "source": "https://github.com/brainbits/phpstan-rules"
    }
}
